{% extends 'base.html.twig' %}

{% block body %}

<article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">{{article.createdAt | date('d/m/Y') }} dans la catégorie {{ article.category.title }}</div>
        <div class="content">
            <img src="{{ article.image }}" alt="">
            <p> {{ article.content | raw }} </p>
        </div>
    </article>
    <hr>

    <section id="commentaires">
        {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{ comment.author }}(<small>{{ comment.createtdAt | date('d/m/Y à H:i') }}</small>)
                </div>
                <div class="border border-secondary m-3 p-3">
                    {{ comment.content | raw }}
                </div>
            </div>
        </div>
        {% endfor %}
    </section>
{% endblock %}