<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# ici nous avons les liens vers Bootstrap et le CSS #}
        {% block stylesheets %}
            <link rel="stylesheet" href="https://bootswatch.com/4/cyborg/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('build/app.css') }}">     {# le chemin est celui ci car voir webpack.config.js dd#}
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-sm navbar-info bg-secondary">
                <a class="navbar-brand" href="{{ path('accueil') }}"><img src="{{asset('/images/blur.png')}}" title="my image" alt="My image"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav">
                         <li class="nav-item mx-1">
                            <a class="nav-link text-white" href="{{ path('allArticles') }}"><button type='button' class='btn btn-secondary btn-sm'>ARTICLES</button></a>
                        </li>
                        <li class="nav-item mx-1">
                            <a class="nav-link text-white" href="{{ path('articleCreate') }}"><button type='button' class='btn btn-secondary btn-sm'>CREATE</button></a>
                        </li>
                        <li class="nav-item mx-1 ml-auto">
                            <a class="nav-link text-white" href="{{ path('contact') }}"><button type='button' class='btn btn-secondary btn-sm'>CONTACT</button></a>
                        </li>
                        <div class='adminBtn'>
                            <li class="nav-item ml-auto">
                                <a class="nav-link text-white" href="{{ path('admin') }}"><button type='button' class='btn btn-warning btn-sm'>Admin</button></a>
                            </li>
                        </div>
                    </ul>
                </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
